{
    "manifest_version": 3,
    "name": "Atlassian Migration Assistant",
    "version": "1.1",
    "description": "Atlassian Migration Assistant simplifies transitioning from on-premise Jira and Confluence to Jira Cloud and Confluence Cloud.",
    "permissions": ["webNavigation", "storage", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "ama@adincebic.com"
        }
    }
}
